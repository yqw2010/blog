@media screen and (max-width: 991px) {
  .container {
    padding-left: 40px;
  }
  .post-title-wrapper a {
    display: none;
  }
  .entry-cates .page-search {
    display: none;
  }
  .article, .cate-wraper {
    padding: 50px 20px 10px;
  }
  .rightbar-frame {
    height: 0;
    display: none;
  }
  .share_self {
    display:none;
  }

  .entry-wrapper {
    margin: 50px auto;
    max-width: 640px;
  }
  .entry-cates {
    width: 607px;
    float: left;
  }
  .entry-recent-post,.entry-recent-posts {
    width: 600px;
  }
  .entry-cates li {
    display: inline-block;
    margin: 0 10px;
  }

  .page-relative-fixed {
    position: fixed;
    right: 60px;
    bottom: 15px;
    z-index 30;
  }
  .page-relative-fixed .icon {
    font-size: 14px;
    color: #909090;
    opacity: 1;
    filter: none;
  }
  .page-relative-fixed .icon:hover {
    color: #AAA;
    opacity: 1;
    filter: none;
  }
  .page-relative-fixed .next b,.page-relative-fixed .prev b {
    position: absolute;
    font-size: 16px;
    top: -40px;
    overflow: visible;
    margin: 0;
    left: -60px;
    background-color: #FAFAFA;
    padding: 0 6px;
    color: #000;
    border-radius 4px;
  }
  .page-relative-fixed a.next,.page-relative-fixed a.prev {
    margin: 0;
    position: static;
    display: inline-block;
    height: 40px;
    width: 40px;
    line-height: 40px;
    text-align: center;
    margin-right: 4px;
    background-color: #EEE;
    color: #AAA;
  }
  .entry-cates ul {
    padding-left:0;
  }
  code {
    box-shadow: none;
  }
}

@media screen and (max-width: 800px) {
 .sidebar-toggler {
   display: none;
 }
  .entry-wrapper {
    margin: 50px auto;
    max-width: 590px;
  }
  .entry-cates {
    width: 547px;
    float: left;
  }
  .entry-recent-post, .entry-recent-posts {
    width: 540px;
  }
  .arrow-tips {
